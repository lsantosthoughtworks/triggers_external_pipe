name: My Workflow
on: 
  workflow_dispatch:

jobs:
  jobA:
    runs-on: ubuntu-latest
    steps:
      - name: Run Job A
        run: echo "Running Job A"

  jobB:
    needs: jobA
    runs-on: ubuntu-latest
    steps:
      - name: Run Job B
        run: echo "Running Job B"

  jobC:
    needs: jobB
    runs-on: ubuntu-latest
    steps:
      - name: Run Job C
        run: echo "Running Job C"

  jobD:
    needs: jobC
    runs-on: ubuntu-latest
    steps:
      - name: Run Job D
        run: echo "Running Job D"
